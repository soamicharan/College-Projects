#include<stdio.h>
#include<string.h>
int main()
{
    int a[36],b,c,d,e,f,g,h=27;
    char s[100],al,di;
    printf("Enter a string.\n");
    scanf("%s",s);
    b=strlen(s);d=0;
    for(g=0;g<=36;g++)
        a[g]=0;
    for(al='a',di='0';al<='z',di<='9';al++,di++)
    {
        e=0;
        for(c=0;c<b;c++)
        {
            if(s[c]==al)
            {
                a[d]=a[d]+1;
            }
            if(s[c]==di)
                a[h]=a[h]+1;

        }
        d++;
    }

    for(al='a',f=0;al<='z',f<26;al++,f++)
    {
        if(a[f]==0)
            continue;
        printf("%c - %d\n",al,a[f]);
    }
    for(di='0',f=27;di<='9',f<=36;di++,f++)
    {

        printf("%c - %d\n",di,a[f]);
    }
    getch();
}
